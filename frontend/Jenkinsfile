pipeline {
    agent any

    tools {
        nodejs 'Node20'
    }

    environment {
        SONARQUBE_ENV = 'SonarQube'
        SONAR_TOKEN = credentials('kalpashram-frontend-sonar-token')
    }

    stages {

        stage('Checkout Code') {
            steps {
                cleanWs()
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/varsharitu55/kalp-ashram-digital-platform.git',
                        credentialsId: 'github-creds'
                    ]],
                    extensions: [
                        [$class: 'RelativeTargetDirectory', relativeTargetDir: '.']
                    ]
                ])
            }
        }

        stage('Setup & Clean') {
            steps {
                dir('frontend') {
                    bat 'node -v'
                    bat 'npm -v'
                    bat 'npm install -g npm@9.8.1'

                    bat 'rd /s /q node_modules || echo none'
                    bat 'del package-lock.json || echo none'
                    bat 'npm cache clean --force'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    bat 'npm install --legacy-peer-deps'
                }
            }
        }

        stage('Build') {
            steps {
                dir('frontend') {
                    bat 'npm run build -- --configuration production'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('frontend') {
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                        script {
                            def scannerHome = tool 'SonarQubeCLI'
                            bat """
                            ${scannerHome}\\bin\\sonar-scanner.bat ^
                              -Dsonar.projectKey=KalpashramFrontend ^
                              -Dsonar.sources=src ^
                              -Dsonar.login=%SONAR_TOKEN%
                            """
                        }
                    }
                }

                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'frontend/dist/**/*', fingerprint: true
            }
        }
    }
}
