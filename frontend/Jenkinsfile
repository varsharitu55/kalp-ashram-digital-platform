pipeline {
    agent any

    tools {
        nodejs 'Node20'  // Node 20.19.0 installed in Jenkins
        // Make sure Java is configured in Jenkins global tools if needed
    }

    environment {
        SONARQUBE_ENV = 'SonarQube'
        SONAR_TOKEN = credentials('kalpashram-frontend-sonar-token')
        PATH = "${tool('Node20')}\\bin;${env.PATH}"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/varsharitu55/kalp-ashram-digital-platform.git'
            }
        }

        stage('Setup Node & Clean') {
            steps {
                dir('kalpashram-digital-enquiry-service-ui/frontend') {
                    // Node/npm versions
                    bat 'node -v'
                    bat 'npm -v'
                    bat 'npm install -g npm@9.8.1'
                    bat 'npm -v'

                    // Clean old dependencies
                    bat 'rd /s /q node_modules || echo node_modules not found'
                    bat 'del package-lock.json || echo package-lock.json not found'

                    // Optional: clear npm cache
                    bat 'npm cache clean --force'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('kalpashram-digital-enquiry-service-ui/frontend') {
                    bat 'npm install --legacy-peer-deps'
                }
            }
        }

        stage('Lint') {
            steps {
                dir('kalpashram-digital-enquiry-service-ui/frontend') {
                    bat 'npm run lint || echo "Lint failed, skipping..."'
                }
            }
        }

        stage('Check Java') {
            steps {
                bat """
                echo JAVA_HOME=%JAVA_HOME%
                java -version
                """
            }
        }

        stage('Build (Production)') {
            steps {
                dir('kalpashram-digital-enquiry-service-ui/frontend') {
                    bat 'npm run build -- --configuration production'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('kalpashram-digital-enquiry-service-ui/frontend') {
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                        bat """
                        ${tool 'SonarQubeCLI'}\\bin\\sonar-scanner.bat ^
                          -Dsonar.projectKey=KalpashramFrontend ^
                          -Dsonar.projectName=Kalpashram-frontend ^
                          -Dsonar.sources=src ^
                          -Dsonar.exclusions=**\\*.spec.ts ^
                          -Dsonar.typescript.lcov.reportPaths=coverage\\lcov.info ^
                          -Dsonar.host.url=http://localhost:9000 ^
                          -Dsonar.login=%SONAR_TOKEN%
                        """
                    }
                }
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'kalpashram-digital-enquiry-service-ui/frontend/dist/**/*', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Frontend pipeline completed successfully!'
        }
        failure {
            echo 'Frontend pipeline failed!'
        }
    }
}
