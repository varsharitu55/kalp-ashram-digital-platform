pipeline {
    agent any

    tools {
        nodejs 'Node20' // Make sure Node 20 is installed in Jenkins
    }

    environment {
        SONARQUBE_ENV = 'SonarQube'
        SONAR_TOKEN = credentials('kalpashram-frontend-sonar-token')
    }

    stages {

        stage('Checkout Code') {
            steps {
                cleanWs()
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/varsharitu55/kalp-ashram-digital-platform.git',
                    ]],
                    extensions: [
                        [$class: 'RelativeTargetDirectory', relativeTargetDir: '.']
                    ]
                ])
            }
        }
stage('Setup & Clean') {
    steps {
        dir('frontend') {
            bat 'node -v'
            bat 'npm -v'

            // Full clean
            bat 'if exist node_modules rd /s /q node_modules'
            bat 'if exist package-lock.json del package-lock.json'
            bat 'npm cache clean --force'

            // Install Angular CLI locally (no legacy flags)
            bat 'npm install --save-dev @angular/cli@21.2.0'

            // Install all project dependencies cleanly
            bat 'npm install --no-optional'
        }
    }
}

stage('Debug Workspace') {
    steps {
        dir('frontend') {
            bat 'cd'
            bat 'dir'
            bat 'dir node_modules'
            bat 'dir node_modules\\@angular\\common'
            bat 'dir node_modules\\@angular\\common\\http'
        }
    }
}


        stage('Build') {
            steps {
                dir('frontend') {
                    // Check Angular version
                    bat 'npx ng version'

                    // Build production bundle
                    bat 'npx ng build --configuration production'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('frontend') {
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                        script {
                            def scannerHome = tool 'SonarQubeCLI'
                            bat """
                            ${scannerHome}\\bin\\sonar-scanner.bat ^
                              -Dsonar.projectKey=KalpashramFrontend ^
                              -Dsonar.sources=src ^
                              -Dsonar.login=%SONAR_TOKEN%
                            """
                        }
                    }
                }

                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'frontend/dist/**/*', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Frontend pipeline completed successfully!'
        }
        failure {
            echo 'Frontend pipeline failed!'
        }
    }
}
